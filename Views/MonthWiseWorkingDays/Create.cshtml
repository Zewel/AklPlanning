@model SweaterPlanning.Models.MonthWiseWorkingDay
<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title"><span class="fa fa-list"></span> Month Wise Working Day</h3>
                    <button type="button" class="btn btn-default float-right" data-toggle="modal" data-target="#modal-xl">
                        Create
                    </button>

                </div>

                <div class="card-body table-responsive">
                    <table id="dailyTaskTable" class="table table-responsive table-bordered table-hover dataTable">
                        <thead>
                            <tr>
                                <th align="center">MonthWiseWorkId</th>
                                <th align="center">Year</th>
                                <th>Month</th>
                                <th>DayNo</th>
                                <th>Daily Workable Minutes</th>
                                <th>Total Workable Minute</th>
                                <th>Avg. Knitting Time</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                        @*</tbody>*@
                        <tfoot>
                            <tr>
                                <th colspan="3">Total</th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>

                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="modal fadeInUp" id="modal-xl">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header card-header">
                            <h4 class="modal-title">Sweater Planning</h4>
                            <button type="button" id="closeBtn" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="col-md-12">
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">Month Wise Working Day</h3>
                                        @*<a asp-action="Index" class="float-right">Back to List</a>*@
                                    </div>

                                    <form name="MonthWiseWorkingDay" id="valid" asp-action="Create">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-6">

                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                    <div class="form-group">
                                                        <label asp-for="YearId" class="control-label" value="">Year <span style="color:red"> *</span></label>
                                                        <select asp-for="YearId" class="form-control" asp-items="ViewBag.YearId">
                                                            <option value="">--Select Year--</option>
                                                        </select>
                                                        <span asp-validation-for="YearId" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="MonthId" class="control-label" value="Month">Month <span style="color:red"> *</span></label>
                                                        <select asp-for="MonthId" class="form-control" onchange="duplicateCheck()" asp-items="ViewBag.MonthId">
                                                            <option value="">--Select Month--</option>
                                                        </select>
                                                        <span asp-validation-for="MonthId" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="DayNo" class="control-label" value="Day No">Day No <span style="color:red"> *</span></label>
                                                        <input asp-for="DayNo" class="form-control" />
                                                        <span asp-validation-for="DayNo" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="WorkableMinutes" class="control-label" value="Workable Minutes">Workable Minutes <span style="color:red"> *</span></label>
                                                        <input asp-for="WorkableMinutes" class="form-control" />
                                                        <span asp-validation-for="WorkableMinutes" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label asp-for="AvgKnittingTime" class="control-label" value="Avg Knitting Time">Avg. Knitting Time<span style="color:red"> *</span></label>
                                                        <input asp-for="AvgKnittingTime" class="form-control" />
                                                        <span asp-validation-for="AvgKnittingTime" class="text-danger"></span>
                                                    </div>


                                                </div>


                                            </div>
                                        </div>
                                        <div class="card-footer">

                                            <div class="form-group">
                                                <input type="submit" id="submitBtn" value="Create" class="btn btn-primary" />

                                            </div>
                                        </div>

                                        @*<div class="modal-footer justify-content-between">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                <button type="button" class="btn btn-primary">Save changes</button>
                                            </div>*@
                                    </form>

                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
        </div>

    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script>


         $(function () {
           var table= $('#dailyTaskTable').DataTable({
               "ajax": { "url": apiHeader + "api/Common/GetAllMonthWiseOrkingDay", "dataSrc": "", "crossDomain": true, },
               "buttons": ['excel', 'pdf', 'copy'],
               //scrollY: "300px",
               //scrollX: true,
               //scrollCollapse: true,
               //paging: false,
               "ordering": false,
               "lengthMenu": [[12, 25, 50, -1], [12, 25, 50, "All"]],
               "rowsGroup": [1],
               "vertical_align": 'middle',
                "columns":
                [
                        { "data": "MonthWiseWorkId" },
                        { "data": "YearName" },
                        { "data": "MonthNames" },
                        { "data": "DayNo" },
                        { "data": "WorkableMinutes" },
                        { "data": "TotalWorkableMinute" },
                        { "data": "AvgKnittingTime" },
                        {
                            "data": null,
                            "defaultContent": "<button class='btn btn-block bg-gradient-success btn-sm edit'>Edit</button>",
                            "targets": -1
                        }
                ],
                "columnDefs": [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false,
                        "orderable": false
                    },
                    { orderable: false, targets: '_all' },

                    { className: 'dt-center', targets: [1,2,3,4] },

                    //, { className: "btn", targets: 9 },
               ],
               "footerCallback": function (row, data, start, end, display) {
                   var api = this.api();
                   // Remove the formatting to get integer data for summation
                   var intVal = function (i) {

                       return typeof i === 'string' ?
                           i.replace(/[\$,]/g, '') * 1 :
                           typeof i === 'number' ?
                               i : 0;

                   };

                   // Total over all pages

                   //if (api.column(COLNUMBER).data().length) {
                   //    var total = api
                   //        .column(COLNUMBER)
                   //        .data()
                   //        .reduce(function (a, b) {
                   //            return intVal(a) + intVal(b);
                   //        })
                   //}
                   //else { total = 0 };


                   // Total over this page

                   if (api.column(3).data().length) {
                       var pageTotal = api
                           .column(3, { page: 'current' })
                           .data()
                           .reduce(function (a, b) {
                               return intVal(a) + intVal(b);
                           })
                   }
                   else { pageTotal = 0 };
                   if (api.column(5).data().length) {
                       var totalTime = api
                           .column(5, { page: 'current' })
                           .data()
                           .reduce(function (a, b) {
                               return intVal(a) + intVal(b);
                           })
                   }
                   else { totalTime = 0 };

                   // Update footer
                   $(api.column(3).footer()).html(
                       pageTotal +' Days'
                   );
                   $(api.column(5).footer()).html(
                       totalTime +' Minutes'
                   );
               }
            });
            $('#dailyTaskTable tbody').on('click', 'button', function () {
                debugger;
                //var data = table.row($(this).parents('tr')).data();
                var user_data = table.row($(this).parents('tr')).data();
                var date = user_data.MonthWiseWorkId;
                var flag = 'Edit';
                window.location.href = '@Url.Action("Edit", "MonthWiseWorkingDays")?id=' + date ;
            });
         //   $('#dailyTaskTable').rowspanizer(
         //       {
	        //columns: [1]
         //       });

             $("#dailyTaskTable").rowspanizer({ vertical_align: 'middle' });

             $('#closeBtn').click(function (ev) {
                 //$(".modal-body").html("");
                 //ev.preventDefault();
                 $('#modal').modal('toggle');
             });

        });

        function Add() {
             window.location.href = '@Url.Action("DailyActivityByTimeSlot", "View")';
            }

            function duplicateCheck() {
                var yeardId = $('#YearId').val();
                var monthId = $('#MonthId').val();
                $.ajax({
                    url: apiHeader + 'api/Common/GetMonthDuplicateCheck/' + yeardId + '/' + monthId,
                    type: "GET",
                    dataType: "json",
                    success: function (result) {
                        debugger;
                        if (result.length> 0) {
                            toastr.warning('Already Allocated of this month.');
                            //$("#submitBtn").attr("disabled", true);
                            $(':input[type="submit"]').prop('disabled', true);
                        } else {
                            //$("#submitBtn").attr("disabled", false);
                            $(':input[type="submit"]').prop('disabled', false);
                        }
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }

    </script>
}







