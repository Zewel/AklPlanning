<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Factory Wise Machine Entry Edit</h3>
        </div>

        <form asp-action="Edit">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MachineId" />
                        <input type="hidden" asp-for="CreateBy" />
                        <input type="hidden" asp-for="CreateDate" />
                        <input type="hidden" asp-for="YearId" />
                        <input type="hidden" asp-for="FactoryId" />
                        <input type="hidden" asp-for="BrandId" />
                        <input type="hidden" asp-for="GaugeId" />
                        <input type="hidden" asp-for="GaugeGroupId" />
                        <div class="form-group">
                            <label asp-for="YearId" value="Year" class="control-label"> Year <span style="color:red"> *</span></label>
                            <select asp-for="YearId" class="form-control" asp-items="ViewBag.YearId" disabled>
                                <option value="">--Select Year--</option>
                            </select>
                            <span asp-validation-for="YearId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FactoryId" class="control-label"> Factory <span style="color:red"> *</span></label>
                            <select asp-for="FactoryId" class="form-control" asp-items="ViewBag.FactoryId" disabled>
                                <option value="">--Select Factory--</option>
                            </select>
                            <span asp-validation-for="FactoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BrandId" class="control-label"> Brand <span style="color:red"> *</span></label>
                            <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId" disabled>
                                <option value="">--Select Machine Brand--</option>
                            </select>
                            <span asp-validation-for="BrandId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GaugeId" class="control-label">Gauge <span style="color:red"> *</span></label>
                            <select asp-for="GaugeId" class="form-control" asp-items="ViewBag.GaugeId" disabled>
                                <option value="">--Select Gauge--</option>
                            </select>
                            <span asp-validation-for="GaugeId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GaugeGroupId" class="control-label">Gauge Group <span style="color:red"> *</span></label>
                            <select asp-for="GaugeGroupId" class="form-control" asp-items="ViewBag.GaugeGroupId" disabled>
                                <option value="">--Select Gauge--</option>
                            </select>
                            <span asp-validation-for="GaugeGroupId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NoOfMachine" class="control-label"> No of Machine <span style="color:red"> *</span></label>
                            <input asp-for="NoOfMachine" class="form-control" />
                            <span asp-validation-for="NoOfMachine" class="text-danger"></span>
                        </div>

                    </div>
                </div>
            </div>
            <div class="card-footer">

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />

                </div>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
