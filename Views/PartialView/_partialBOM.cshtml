@model SweaterPlanning.Models.StyleMaster
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <div class="row">
                        <h3 class="card-title">Style Information</h3>
                    </div>
                </div>
                <form>
                    <div class="card-body row">
                        <div class="col-md-6">
                            <div class="row  col-md-12 table-bordered">
                                <label style="background-color:lavender" class="col-md-4">Style No</label>
                                <label class="col-md-7" id="stlDesLbl">@Model.StlDesc</label>
                                
                            </div>
                            <div class="row col-md-12 table-bordered">
                                <label style="background-color:lavender" class="col-md-4">Buyer</label>
                                <label class="col-md-6">@Model.Bur_Name</label>
                            </div>
                            <div class="row col-md-12 table-bordered">
                                <label style="background-color:lavender" class="col-md-4">Style Des.</label>
                                <label class="col-md-6">@Model.StlDescrptn</label>
                            </div>
                            <div class="row col-md-12 table-bordered">
                                <label style="background-color:lavender" class="col-md-4">Department:</label>
                                <label class="col-md-6">@Model.GmtDept</label>
                            </div>
                            <div class="row col-md-12 table-bordered">
                                <label style="background-color:lavender" class="col-md-4">Gauge:</label>
                                <label class="col-md-6">@Model.GaugeDesc</label>
                            </div>
                            <div class="row col-md-12 table-bordered">
                                <label style="background-color:lavender" class="col-md-4">Season:</label>
                                <label class="col-md-6">@Model.SeasonName</label>
                            </div>
                            <div class="row col-md-12 table-bordered">
                                <label style="background-color:lavender" class="col-md-4">Garment Type:</label>
                                <label class="col-md-6">@Model.GmtDept</label>
                            </div>
                            <div class="row col-md-12 table-bordered">
                                <label style="background-color:lavender" class="col-md-4">Style Type:</label>
                                <label class="col-md-6">@Model.StyleType</label>
                            </div>

                            <div class="row col-md-12 table-bordered">
                                <label style="background-color:lavender" class="col-md-4">Count:</label>
                                <label class="col-md-6">@Model.YarnCount</label>
                            </div>
                            <div class="row col-md-12 table-bordered">
                                <label style="background-color:lavender" class="col-md-4">Yarn Des.:</label>
                                <label class="col-md-6">@Model.YarnComp</label>
                            </div>
                            <div class="row col-md-12 table-bordered">
                                <label style="background-color:lavender" class="col-md-4">Order Qty.:</label>
                                <label class="col-md-7" id="pottlLavel">@Model.pottlqty</label>
                                
                            </div>
                            <div class="row col-md-12 table-bordered">
                                <label style="background-color:lavender" class="col-md-4">FOB:</label>
                                <label class="col-md-6">$ @Model.FobAmnt</label>
                            </div>
                            <div class="row col-md-12 table-bordered">
                                <label style="background-color:lavender" class="col-md-4">OC Date:</label>
                                <label class="col-md-6">@Convert.ToDateTime(Model.ConfDt).ToString("dd MMM yyyy")</label>
                            </div>

                        </div>

                        <div class="col-md-6">
                            <div class="row  col-md-12 table-bordered" style="float:right">
                                <img src="data:image;base64,@System.Convert.ToBase64String(Model.StyleSktbyt)" height="100px" />
                                <div class="row col-md-12 table-bordered">
                                    <label style="background-color:lavender" class="col-md-4">Source Type:</label>
                                    <label class="col-md-6">@Model.srcType</label>
                                </div>
                                <div class="row col-md-12 table-bordered">
                                    <label style="background-color:lavender" class="col-md-4">Yarn Supplier:</label>
                                    <label class="col-md-6">@Model.SupName</label>
                                </div>
                                <div class="row col-md-12 table-bordered">
                                    <label style="background-color:lavender" class="col-md-4">Merchandiser:</label>
                                    <label class="col-md-5">@Model.Fullname</label>
                                </div>


                                <div class="row  col-md-12 table-bordered">
                                    <label style="background-color:lavender" class="col-md-4">Production Lead:</label>
                                    <label class="col-md-6">@Model.ProdLead</label>
                                </div>

                                <div class="row col-md-12 table-bordered">
                                    <label style="background-color:lavender" class="col-md-6">Merchandiser:</label>
                                    <label class="col-md-5">@Model.Fullname</label>
                                </div>
                                <div class="row  col-md-12 table-bordered">
                                    <label style="background-color:lavender" class="col-md-6">Production Lead:</label>
                                    <label class="col-md-6">@Model.ProdLead</label>
                                </div>
                                <div class="row col-md-12 table-bordered">
                                    <label style="background-color:lavender" class="col-md-6">FOB:</label>
                                    <label class="col-md-6">$ @Model.FobAmnt</label>
                                </div>
                            </div>


                        </div>


                    </div>
                </form>

            </div>

            <div class="card card-primary" style="width:100%">
                <div class="card-header">
                    <h3 class="card-title">PO Wise Planning</h3>
                </div>
                <form>
                    <div class="card-body table-responsive" style="height: 200px; width:100%">
                        <div class="row" id="poListBody">
                            <table class="table table-bordered table-striped table-hovertable-head-fixed" id="PoTable">
                                <thead>
                                    <tr style="background-color:antiquewhite">
                                        @*<th>Action</th>*@
                                        <th>#Po No</th>
                                        <th>Color</th>
                                        <th>Po Qty</th>
                                        <th>Booked Ex-Fty</th>
                                        <th>Po Ex-Fty</th>
                                        <th>Rev. Ex-Fty</th>

                                        <th>Initial Planning Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.StylePurchaseOrders)
                                    {
                                        <tr>

                                            <td>
                                                @item.PONo <input type="hidden" class="poCode" value="@item.POCod" />
                                                <input type="hidden" class="planDate" value="@item.InitialPlaneDate" />
                                            </td>
                                            <td>@item.POColor</td>
                                            <td class="poQty">@item.POQty</td>
                                            <td>@Convert.ToDateTime(item.BookingExfty).ToString("dd MMM yyyy")</td>
                                            <td>@Convert.ToDateTime(item.POExfty).ToString("dd MMM yyyy")</td>
                                            @{if (Convert.ToDateTime(item.RevExfty).ToString("dd MMM yyyy") == "01 Jan 1900")
                                                {
                                                    <td></td>
                                                }
                                                else
                                                {
                                                    <td>@Convert.ToDateTime(item.RevExfty).ToString("dd MMM yyyy")</td>
                                                } }

                                            @{
                                                if (Convert.ToDateTime(item.InitialPlaneDate).ToString("dd MMM yyyy") == null)
                                                {


                                                    <td></td>
                                                }
                                                else
                                                {
                                                    <td>@Convert.ToDateTime(item.InitialPlaneDate).ToString("dd MMM yyyy")</td>
                                                }
                                            }

                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr style="background-color:lightblue">
                                        <td colspan="2">Total</td>
                                        <td>@Model.StylePurchaseOrders.Sum(x => x.POQty)</td>
                                        <td colspan="9"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </form>
                @*<div class="card-footer">
                <button type="submit" onclick="Add()" id="processButton" class="float-right btn btn-primary">Submit</button>
            </div>*@
            </div>


        </div>
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">BOM Information</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form>
                    <div class="card-body" style="background-color:lightblue">
                        <table class="table table-bordered table-striped table-hovertable-head-fixed" id="PoTable">
                            <thead>
                                <tr style="background-color:antiquewhite">
                                    @*<th>Action</th>*@
                                    <th>Main Category</th>
                                    <th>Sub Category</th>
                                    <th>Color</th>
                                    <th>Unit Name</th>
                                    <th>Required Qty</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item1 in Model.BOMs)
                                {
                                    <tr>
                                        <td>@item1.Mcat_Desc</td>
                                        <td>@item1.Sbcat_Desc</td>
                                        <td>@item1.Color</td>

                                        <td>@item1.UnitName</td>
                                        <td>@item1.REQUIREDQTY</td>

                                    </tr>
                                }
                            </tbody>

                        </table>

                    </div>
                </form>

            </div>

        </div>

    </div>
    <div class="row">
      
    </div>

</div>

