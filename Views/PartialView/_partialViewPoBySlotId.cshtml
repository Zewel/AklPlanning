@model System.Data.DataTable;
@using System.Data;
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>

<table class="table table-bordered table-head-fixed text-nowrap table-hover col-md-12 "  id="viewPo">
    <thead class="fixedHeader-floating viewPoHead" style="background-color:aliceblue; border:1px">
        <tr style="background-color:red">
            <th style="background-color:lavender;">HOD</th>
            <th style="background-color:lavender">Style Category</th>
            <th style="background-color:lavender">Gmt. Dept</th>
            <th style="background-color:lavender">Buyer</th>
            <th style="background-color:lavender">GG</th>
            <th style="background-color:lavender">Style</th>
            <th style="background-color:lavender">Order No</th>
            <th style="background-color:lavender">Qty/Pcs</th>
            <th style="background-color:lavender">Actual Ship Date</th>
            <th style="background-color:lavender">Previous Plan Qty</th>
            <th style="background-color:lavender">Knit Plan Qty </th>
            <th style="background-color:lavender">Production Qty </th>
            <th style="background-color:lavender">Jac Time</th>
            <th style="background-color:lavender">Knit Prod/Mc</th>
            <th style="background-color:lavender">Knit Lead Time</th>
            <th style="background-color:lavender">Req. Machine</th>
            <th style="background-color:lavender">Pord/Day</th>
            <th style="background-color:lavender">Trial Date</th>
            <th style="background-color:lavender">Start Date</th>
            <th style="background-color:lavender">End Date</th>
            <th style="background-color:lavender">Knit Done Before Ship Date</th>
            <th style="background-color:lavender">Machine Brand</th>
            <th style="background-color:lavender">Factory</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow item in Model.Rows)
        {
            <tr style="overflow:hidden">
                <td>@item.ItemArray[0] </td>
                <td>@item.ItemArray[1] </td>
                <td>@item.ItemArray[2] </td>
                <td>@item.ItemArray[3] </td>
                <td>@item.ItemArray[4] </td>
                <td>@item.ItemArray[5] </td>
                <td>@item.ItemArray[6] </td>
                <td>@item.ItemArray[7] </td>
                <td>@item.ItemArray[8] </td>
                <td>@item.ItemArray[9] </td>
                <td>@item.ItemArray[10] </td>
                <td>@item.ItemArray[23]</td>
                <td>@item.ItemArray[11] </td>
                <td>@item.ItemArray[12] </td>
                <td>@item.ItemArray[13] </td>
                <td>@item.ItemArray[14] </td>
                <td>@item.ItemArray[15] </td>
                <td>@item.ItemArray[16] </td>
                <td>@item.ItemArray[17] </td>
                <td>@item.ItemArray[18] </td>
                <td>@item.ItemArray[19] </td>
                <td>@item.ItemArray[20] </td>
                <td>@item.ItemArray[21] </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr style="background-color:antiquewhite">
            <td colspan="7">Total Order Qty</td>
            <td>@Model.AsEnumerable().Sum(e => Convert.ToInt32(e.ItemArray[7]))</td>
            <td colspan="1">Total Kn./Bl. Qty</td>
            <td>@Model.AsEnumerable().Sum(e => Convert.ToInt32(e.ItemArray[9]))</td>
            <td>@Model.AsEnumerable().Sum(e => Convert.ToInt32(e.ItemArray[10]))</td>
            <td>@Model.AsEnumerable().Sum(e => Convert.ToInt32(e.ItemArray[23]))</td>
            <td colspan="4"></td>
            <td>@Model.AsEnumerable().Sum(e => Convert.ToInt32(e.ItemArray[15]))</td>
            <td colspan="6"></td>
        </tr>
    </tfoot>
</table>
@section Scripts{
    <script>
        $(function () {
            debugger;

        });
    </script>
}