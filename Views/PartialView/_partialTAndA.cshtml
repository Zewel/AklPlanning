@model System.Data.DataTable;
@using System.Data;

<div class="row">
    <div class="col-md-12">
        @{
            var style = "";
            @if (Model.Rows.Count > 0) style = Model.AsEnumerable().FirstOrDefault().ItemArray[0].ToString();
        }
        <div class="row">

        </div>
        <div class="card card-success">
            <div class="card-header">
                <div class="row">

                    <div class="col-md-4">
                        <span class="info-box-text fa fa-cog" style="color:white"></span><label style="color:white; font-weight:bold">T&A Event</label>
                    </div>
                    <div class="col-md-4">
                        <label>Style No: @style</label>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form>
                <div class="card-body table-responsive " style="height:280px">

                    <div class="col-md-12 table ">
                        <table class="table  table-bordered table-head-fixed text-nowrap table-hover">
                            <thead class="fixedHeader-floating">
                                <tr>
                                    @*<th>Style NO</th>*@
                                    <th>Buyer</th>
                                    <th>Main Category</th>
                                    <th>T&A Category</th>
                                    <th>T&A Event</th>
                                    <th>Plan Date</th>
                                    <th>Complete Date</th>
                                    <th>Complete Remrks</th>
                                    <th>Resp. Person</th>
                                    <th>Gauge </th>
                                    <th>Team HOD</th>
                                    <th>Merchandiser</th>
                                    <th>Verify Remarks</th>
                                    <th>Verify Date</th>
                                    <th>Verify By</th>

                                     
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow item in Model.Rows)
                                {

                                <tr style="background-color:lightsteelblue">

                                    @*<td>@item.ItemArray[0]</td>*@
                                    <td>@item.ItemArray[1]</td>
                                    <td>@item.ItemArray[2]</td>
                                    <td>@item.ItemArray[3]</td>
                                    <td>@item.ItemArray[4]</td>
                                    <td>@item.ItemArray[5]</td>
                                    <td>@item.ItemArray[6]</td>
                                    <td>@item.ItemArray[7]</td>
                                    <td>@item.ItemArray[8]</td>
                                    <td>@item.ItemArray[9]</td>
                                    <td>@item.ItemArray[10]</td>
                                    <td>@item.ItemArray[11]</td>
                                    <td>@item.ItemArray[13]</td>
                                    <td>@item.ItemArray[14]</td>
                                    <td>@item.ItemArray[15]</td>
                                </tr>

                                }

                            </tbody>

                        </table>
                    </div>

                </div>
            </form>

        </div>

    </div>

</div>